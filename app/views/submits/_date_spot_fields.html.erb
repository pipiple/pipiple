<div class="nested-fields">
  <div class="field">
    <%= f.label :カテゴリー %>
    <br>
    <%= f.select :category_id, Category.all.pluck(:id, :name) => ['ランチ', 'デートスポット①', 'デートスポット②', 'ディナー', 'ホテル'] %>
  </div><br>

  <div class="field">
    <%= f.label :店名（場所名） %>
    <br>
    <%= f.text_field :name, class: 'form-control' %>
  </div><br>

  <div class="field">
    <%= f.label :内容 %>
    <br>
    <%= f.text_area :description, :size => "100x2", class: 'form-control' %>
  </div><br>

  <div class="field">
    <%= f.label :画像 %>
    <%= f.file_field :image %>
  </div><br>

  <div class="field">
    <%= f.label :URL %>
    <br>
    <%= f.text_field :url, class: 'form-control' %>
  </div><br>

  <%= link_to_remove_association "デートスポットを消す", f %>
</div>
