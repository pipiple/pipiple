<head>
  <title><%= @submit.name %> - ぴぴぷる(PiPiple)</title>
</head>

<div class="submits show container">
  <div class="row">
    <div class="plan-description col-lg-10 col-md-10 col-sm-10 col-xs-12">
      <div class="contents-top">
        <div class="contents-name">
          <h2><%= @submit.name %></h2>
        </div>
        <div class="contents-overview">
          <p><%= @submit.overview %></p>
        </div>
      </div>
      <div class="user-name">
        <b>投稿者：<%= @submit.user.name %><b>
      </div>
      <!-- lunch -->
      <div class="contents">
        <p class="each_title">ランチ</p>
        <p class="title_title"><span><%= @submit.lunch %></span></p>
        <div class="row each_contents">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 px-0">
            <%= image_tag @submit.lunch_image.to_s, :class => "img-fluid" %>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 each_body">
            <p><%= @submit.lunch_body %></p>
            <%= link_to(@submit.lunch_URL) do %>
            <strong>お店の予約はこちら</strong>
            <% end %>
          </div>
        </div>
      </div>
      <!-- afternoon -->
      <div class="contents">
        <p class="each_title">スポット①</p>
        <p class="title_title"><span><%= @submit.afternoon %></span></p>
        <div class="row each_contents">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 px-0">
            <%= image_tag @submit.afternoon_image.to_s, :class => "img-fluid" %>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 each_body">
            <p><%= @submit.afternoon_body %></p>
            <%= link_to(@submit.afternoon_URL) do %>
            <strong>詳細はこちら</strong>
            <% end %>
          </div>
        </div>
      </div>
      <!-- evening -->
      <div class="contents">
        <p class="each_title">スポット②</p>
        <p class="title_title"><span><%= @submit.evening %></span></p>
        <div class="row each_contents">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 px-0">
            <%= image_tag @submit.evening_image.to_s, :class => "img-fluid" %>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 each_body">
            <p><%= @submit.evening_body %></p>
            <%= link_to(@submit.evening_URL) do %>
            <strong>詳細はこちら</strong>
            <% end %>
          </div>
        </div>
      </div>
      <!-- dinner -->
      <div class="contents">
        <p class="each_title">ディナー</p>
        <p class="title_title"><span><%= @submit.dinner %></span></p>
        <div class="row each_contents">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 px-0">
            <%= image_tag @submit.dinner_image.to_s, :class => "img-fluid" %>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 each_body">
            <p><%= @submit.dinner_body %></p>
            <%= link_to(@submit.dinner_URL) do %>
            <strong>お店の予約はこちら</strong>
            <% end %>
          </div>
        </div>
      </div>

      <div class="delete_edit contents">
        <% if user_signed_in? && current_user.id == @submit.user_id %>
          <p><%= link_to '編集', edit_submit_path(@submit), class: "btn btn-danger" %></p>
          <p><%= link_to '削除', "/submits/#{@submit.id}", method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %></p>
        <% end %>
      </div>

      <div class="advertisement">
        <!-- GoogleAd01 -->
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-5782150709003973"
             data-ad-slot="4541501501"
             data-ad-format="auto"
             data-full-width-responsive="true"></ins>
